<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:minWidth="720dp"
    android:orientation="vertical"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white_bg_red_stroke"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_header"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coupon_w"
            android:visibility="gone"/>

        <com.coupon.go.view.TextViewRegular

            style="@style/all_coupons_small_header_text"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:text="Availability"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.coupon.go.view.TextViewRegular
                android:id="@+id/tv_dialog_coupon_title_level_1"
                style="@style/level_header_text"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="30dp"
                android:text="Free Meal: "
                />
            <com.coupon.go.view.TextViewRegular
                android:id="@+id/tv_dialog_coupon_description_level_1"
                style="@style/all_coupons_small_header_text"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:text="5"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.coupon.go.view.TextViewRegular
                android:id="@+id/tv_dialog_coupon_title_level_2"
                style="@style/level_header_text"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="30dp"
                android:text="Free Burgers: "
                />
            <com.coupon.go.view.TextViewRegular
                android:id="@+id/tv_dialog_coupon_description_level_2"
                style="@style/all_coupons_small_header_text"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:text="10"
                />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.coupon.go.view.TextViewRegular
            android:id="@+id/tv_dialog_coupon_title_level_3"
            style="@style/level_header_text"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="30dp"
            android:text="Buy 1 Get 1 Free: "
            />
        <com.coupon.go.view.TextViewRegular
            android:id="@+id/tv_dialog_coupon_description_level_3"
            style="@style/all_coupons_small_header_text"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:text="50"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal">

        <com.coupon.go.view.TextViewRegular
            android:id="@+id/tv_dialog_coupon_title_level_4"
            style="@style/level_header_text"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="30dp"
            android:text="15% Off: "
            />
            <com.coupon.go.view.TextViewRegular
                android:id="@+id/tv_dialog_coupon_description_level_4"
                style="@style/all_coupons_small_header_text"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:text="Unlimited"
                />
        </LinearLayout>


        <!-- Bottom Area -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Left Button -->

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@drawable/back_ass" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>